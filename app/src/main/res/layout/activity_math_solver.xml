<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFD8DC"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:weightSum="10"
    tools:context="com.example.problemsolver.MathSolver">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="29dp"
        android:layout_weight="5"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:digits="@string/accepted_values"

            android:hint="@string/equation_hint"

            android:paddingLeft="10dp"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"></LinearLayout>

        <TextView
            android:id="@+id/error"
            android:layout_width="fill_parent"
            android:layout_height="198dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_span="4"
            android:background="#FFFFFF"
            android:gravity="center_horizontal"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>

    <!--     Row 2 Starts From Here -->

    <TableRow
        android:id="@+id/row1"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:background="#ECEFF1"
        android:gravity="center_horizontal">


        <Button
            android:id="@+id/buttonPercentage"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="#FF9800"
            android:text="X"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/buttonClearText"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="#607D8B"
            android:text="C"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="#607D8B"
            android:text="D"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_span="1"
            android:background="#607D8B"
            android:text="*"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />
    </TableRow>

    <!--     Row 3 Starts From Here -->
    <TableRow
        android:id="@+id/row2"
        android:layout_width="fill_parent"
        android:layout_height="84dp"
        android:layout_weight="1"
        android:gravity="center_horizontal">


        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="#2196F3"
            android:text="8"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="#2196F3"
            android:text="7"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="#2196F3"
            android:text="9"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_span="1"
            android:background="#607D8B"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />

    </TableRow>

    <!--     Row 4 Starts From Here -->
    <TableRow
        android:id="@+id/row3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="#2196F3"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="#2196F3"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="#2196F3"
            android:text="6"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/buttonSubtraction"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_span="1"
            android:background="#607D8B"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />

    </TableRow>

    <!--     Row 5 Starts From Here -->
    <TableRow
        android:id="@+id/row4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="#2196F3"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="#2196F3"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="#2196F3"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/buttonLeftBracket"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_span="1"
            android:background="#607D8B"
            android:text="("
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />


    </TableRow>

    <!--     Row 6 Starts From Here -->
    <TableRow
        android:id="@+id/row5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/buttonPoint"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="#2196F3"
            android:text="."
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/buttonZero"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="#2196F3"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="#FF9800"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/buttonRightBracket"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_span="1"
            android:background="#607D8B"
            android:text=")"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />


    </TableRow>

</TableLayout>